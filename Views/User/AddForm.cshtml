
@model User
<form asp-action="Add" asp-controller="User"  method="post">

  
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" name = "Name" id="Name" placeholder="name">
  </div>
  <div class="form-group">
    <label for="Age">Age</label>
    <input type="integer" class="form-control" name = "Age" id="Age"placeholder="age" >
  </div>
  <div class="form-group">
    <label for="Email">Email address</label>
    <input type="Email" class="form-control" name = "Email" id="Email" placeholder="email">
  </div>
  
  <div class="form-group">
    <label for="Password">Password</label>
    <input type="password" name = "Password" class="form-control" id="Password" placeholder="pasword :">
  </div>  
  <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>